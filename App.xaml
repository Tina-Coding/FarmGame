<Application x:Class="SUP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SUP"
             xmlns:gameVM="clr-namespace:SUP.ViewModels.Game"
             xmlns:view="clr-namespace:SUP.Views.Game">
    <!--StartupUri="MainWindow.xaml" Togs bort för att den öppnas manuellt i App.xaml.cs--> 
    <Application.Resources>
        <DataTemplate DataType="{x:Type gameVM:GameBoardViewModel}">
            <view:GameBoardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:StartGameViewModel}">
            <view:StartGameView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type gameVM:EndGameViewModel}">
            <view:EndGameView/>
        </DataTemplate>
  
    </Application.Resources>
</Application>
