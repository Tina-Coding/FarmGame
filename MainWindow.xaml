<Window x:Class="SUP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SUP"
        xmlns:gameview="clr-namespace:SUP.Views.Game"
        xmlns:gameVM="clr-namespace:SUP.ViewModels.Game"
        xmlns:converters="clr-namespace:SUP.Views.Converters"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToIconUriConverter x:Key="BoolToIconUriConverter"
                                        OffUri="/Assets/Icons/soundOff.png"
                                        OnUri="/Assets/Icons/soundOn.png" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical"
                    Grid.Row="0">
            <ToggleButton Margin="0, 10, 0, 0"
                          Width="50"
                          Height="35"
                          BorderThickness="0.5"
                          Background="Transparent"
                          IsChecked="{Binding AudioMuted, Mode=TwoWay}">
                <Image Source="{Binding AudioMuted, Converter={StaticResource BoolToIconUriConverter}}" />
            </ToggleButton>
            <Slider Name="VolumeSlider"
                    Width="140"
                    Minimum="0"
                    Maximum="1"
                    Value="{Binding AudioVolume, Mode=TwoWay}" />
        </StackPanel>
        <ContentControl Grid.Row="1"
                        Content="{Binding Screen}" />
    </Grid>
</Window>
