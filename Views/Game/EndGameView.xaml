<UserControl
    x:Class="SUP.Views.Game.EndGameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views.Game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Viewbox>

        <Grid
            Width="800"
            Height="450"
            Background="#FF9BADDC">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.RowSpan="3"
                Grid.ColumnSpan="2"
                Source="/Assets/Images/newEndPage.png" />

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Margin="5,5,5,10"
                VerticalAlignment="Center"
                Background="White"
                Command="{Binding SaveScoreCommand}"
                Content="Spara poäng"
                FontSize="30"
                FontWeight="SemiBold"
                Foreground="#FF120C0C" />

            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="5,10,5,5"
                VerticalAlignment="Top"
                Background="White"
                Command="{Binding TryAgainCommand}"
                Content="Försök igen"
                FontSize="30"
                FontWeight="SemiBold" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="5,30,5,5"
                VerticalAlignment="Center"
                Background="White"
                Command="{Binding BackToStartCommand}"
                Content="Tillbaka till start"
                FontSize="30"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.37,2.78" />
            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Height="40"
                Margin="5,5,5,20"
                VerticalAlignment="Top"
                VerticalContentAlignment="Center"
                Background="#FFB6CDCD"
                FontSize="20"
                Text="{Binding NickName}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Bottom"
                FontSize="15"
                Text="Fyll i ditt spelarnamn nedan:" />
            <TextBlock
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Width="241"
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                Foreground="Black"
                Text="{Binding Score, FallbackValue=poäng 20, StringFormat='Poäng {0}'}"
                TextAlignment="Center" />

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Width="Auto"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe Print"
                FontSize="70"
                Text="{Binding ResultText, FallbackValue=Game over}" />

            <Label
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,16,0,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Content="HighScore"
                FontSize="30" />

            <ListBox
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Width="180"
                Height="170"
                Margin="0,65,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1"
                FontSize="16"
                ItemsSource="{Binding PlayerHighScores}" />

        </Grid>
    </Viewbox>

</UserControl>
