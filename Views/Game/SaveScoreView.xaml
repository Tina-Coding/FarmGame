<UserControl
    x:Class="SUP.Views.Game.SaveScoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views.Game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Viewbox>
        <Grid Background="Pink" Height="450" Width="800">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="/Assets/Images/chicken_views.png"
                   Grid.Column="2"
                   Width="80"
                   HorizontalAlignment="Left" Margin="40,6,0,106" Grid.RowSpan="2" Grid.Row="1"/>



            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                FontSize="20"
                Foreground="Black"
                Text="Fyll i ditt spelarnamn" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Height="35"
                Width="130"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Command="{Binding SaveCommand}"
                Content="Spara poäng"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="#FF120C0C" />

            <Button
                Grid.Row="2"
                Grid.Column="2"
                Height="35"
                Width="130"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Command="{Binding BackToStartCommand}"
                Content="Tillbaka till start"
                FontSize="16"
                FontWeight="SemiBold"
                RenderTransformOrigin="0.37,2.78" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20"
                Foreground="Black"
                Text="Din poäng"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="70"
                Foreground="Black"
                Text="{Binding Score, FallbackValue=0}"
                TextWrapping="Wrap" Margin="122,0,0,0" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="120"
                FontSize="20"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding NickName, FallbackValue=skriv här..}" />

        </Grid>
    </Viewbox>
</UserControl>
