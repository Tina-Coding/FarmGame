<UserControl x:Class="SUP.Views.Game.StartGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SUP.Views.Game"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">



    <Viewbox>
        <Grid Width="800"
              Height="450"
              Background="#FFA4D7FF">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Image Grid.Row="0"
                   Grid.RowSpan="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Source="/Assets/Images/startView.png"
                   Stretch="Uniform" />



            <Button Grid.Row="2"
                    Grid.Column="1"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#FFFFD4D4"
                    BorderBrush="Black"
                    Command="{Binding StartCommand}"
                    Content="Starta spelet"
                    FontSize="40"
                    FontWeight="SemiBold"
                    Foreground="#FF120C0C" />


            <TextBlock x:Name="Title"
                       Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       FontSize="60"
                       Text="FARM ESCAPE" />


            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Margin="0,24,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="Rör på grisen med piltangenterna.&#10;Plocka upp dina kycklingkompisar.&#10;Fly från bonden!&#10;Pausa med mellanslag."
                       TextAlignment="Center"
                       TextWrapping="Wrap" />


            <!--  https://stackoverflow.com/questions/837367/wpf-textblock-linebreak-in-text-attribute  -->

        </Grid>

    </Viewbox>


</UserControl>
